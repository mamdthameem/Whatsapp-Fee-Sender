# Server Configuration
PORT=3000
NODE_ENV=production

# Exotel WhatsApp API Credentials
# Get these from your Exotel dashboard
# API endpoint: https://api.exotel.com/v2/accounts/{SID}/messages
# Authentication: Basic Auth (API_KEY as username, API_TOKEN as password)
EXOTEL_API_KEY=your_api_key_here
EXOTEL_API_TOKEN=your_api_token_here
EXOTEL_SID=sreesakthiengineeringcollege1
EXOTEL_TEMPLATE_NAME=college_fee_receipt
EXOTEL_FROM_NUMBER=919442027368
EXOTEL_WABA_ID=your_waba_id_here

# Storage Configuration
# Options: 'local' or 'firebase'
# IMPORTANT: For WhatsApp, use 'firebase' (public URLs required)
STORAGE_TYPE=firebase
LOCAL_STORAGE_PATH=./uploads

# Firebase Storage Configuration (only if STORAGE_TYPE=firebase)
# Path to Firebase service account JSON file (should be in backend/ folder)
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json
# Storage bucket name (from Firebase Console - Storage section)
# Format: project-id.firebasestorage.app or project-id.appspot.com
FIREBASE_STORAGE_BUCKET=ssec-outing.firebasestorage.app

# URL Configuration
# Update this to your server's IP or domain
BASE_URL=http://localhost:3000

# Cleanup Configuration
CLEANUP_ENABLED=true
ARCHIVE_PATH=./archives
